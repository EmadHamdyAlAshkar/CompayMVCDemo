@model IEnumerable<ApplicationRole>
@{
    ViewData["Title"] = "Index";
}
<style>
    .searchClass{
        display: flex;
        justify-content: center;
    }
</style>
<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create New Role</a>
<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                @Html.DisplayNameFor(m => m.Id)
                @Html.DisplayNameFor(m => m.Name)
                @Html.DisplayNameFor(m => m.CreateAt)
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@Html.DisplayFor(modelItem => item.CreateAt.Day)-@Html.DisplayFor(modelItem => item.CreateAt.Month)-@Html.DisplayFor(modelItem => item.CreateAt.Year)</td>
                    <partial name="_ButtonsPartialView" Model="item.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <h4>No Roles Found!!</h4>
    </div>
}